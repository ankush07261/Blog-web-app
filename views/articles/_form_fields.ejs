<div class="form-group">
    
    <label for="title">Title</label>
    <input required value = "<%= article.title %>" type="text" name="title" id="title" class="form-control" placeholder="Title">

    <label for="description">Description</label>
    <textarea value = "<%= article.description %>" name="description" id="description" class="form-control" placeholder="Description"><%= article.description %></textarea>
    
    <label for="markdown">Markdown</label>
    <textarea required value = "<%= article.markdown %>" name="markdown" id="markdown" class="form-control" placeholder="markdown"><%= article.markdown %></textarea>
    
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>